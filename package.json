{
  "name": "claude-floating",
  "version": "1.0.14",
  "description": "Claude AI floating window for Ubuntu",
  "author": {
    "name": "emfeloan",
    "email": "emfeloan@gmail.com"
  },
  "main": "main.js",
  "bin": {
    "claude-floating": "main.js"
  },
  "license": "MIT",
  "_buildExamples": {
    "patch": "yarn build → 1.0.0 → 1.0.1 (bug fixes)",
    "minor": "yarn build:minor → 1.0.0 → 1.1.0 (new features)",
    "major": "yarn build:major → 1.0.0 → 2.0.0 (breaking changes)",
    "note": "Todos os comandos geram .deb automaticamente"
  },
  "scripts": {
    "start": "electron .",
    "build": "yarn version --patch --no-git-tag-version && electron-builder --linux",
    "build:minor": "yarn version --minor --no-git-tag-version && electron-builder --linux",
    "build:major": "yarn version --major --no-git-tag-version && electron-builder --linux",
    "dist": "electron-builder --linux --publish=never",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "build": {
    "appId": "com.emfeloan.claude-floating",
    "productName": "claude-floating",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": {
        "target": "deb",
        "arch": [
          "x64"
        ]
      },
      "category": "Utility",
      "executableName": "claude-floating",
      "desktop": {
        "entry": {
          "StartupNotify": false,
          "Terminal": false,
          "Type": "Application",
          "Categories": "Utility;",
          "StartupWMClass": "claude-floating"
        }
      }
    },
    "deb": {
      "afterInstall": "scripts/postinstall.sh",
      "afterRemove": "scripts/preremove.sh"
    },
    "icon": "icon.png",
    "files": [
      "main.js",
      "package.json",
      "scripts/"
    ]
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "prettier": "^3.6.2"
  }
}
